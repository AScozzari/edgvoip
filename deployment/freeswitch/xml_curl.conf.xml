<configuration name="xml_curl.conf" description="cURL XML Gateway">
  <bindings>
    <!-- Bind directory and dialplan to backend API -->
    <binding name="w3-voip-backend">
      <!-- Backend API endpoint - CHANGE PORT IF NEEDED -->
      <param name="gateway-url" value="http://127.0.0.1:5000/api/freeswitch/xml" bindings="directory|dialplan"/>
      
      <!-- Timeout settings -->
      <param name="gateway-credentials" value=""/>
      <param name="timeout" value="5"/>
      <param name="disable-100-continue" value="true"/>
      
      <!-- Optional: Add authentication if backend requires it -->
      <!-- <param name="auth-scheme" value="basic"/> -->
      <!-- <param name="auth-user" value="freeswitch"/> -->
      <!-- <param name="auth-pass" value="secret"/> -->
    </binding>
  </bindings>
</configuration>
